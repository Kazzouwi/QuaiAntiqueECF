{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block main %}
    <h1>Ingredient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Est un allergène</th>
                <td>{{ ingredient.isAllergen ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ingredient_index') }}">Retour à la liste</a>

    <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}">Modifier</a>

    {{ include('ingredient/_delete_form.html.twig') }}
{% endblock %}
