{% extends 'base.html.twig' %}

{% block title %}OpeningHours index{% endblock %}

{% block main %}
    <h1>OpeningHours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Day</th>
                <th>MorningOpeningHour</th>
                <th>MorningClosingHour</th>
                <th>EveningOpeningHour</th>
                <th>EveningClosingHour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for opening_hour in opening_hours %}
            <tr>
                <td>{{ opening_hour.id }}</td>
                <td>{{ opening_hour.day }}</td>
                <td>{{ opening_hour.morningOpeningHour ? opening_hour.morningOpeningHour|date('H:i:s') : '' }}</td>
                <td>{{ opening_hour.morningClosingHour ? opening_hour.morningClosingHour|date('H:i:s') : '' }}</td>
                <td>{{ opening_hour.eveningOpeningHour ? opening_hour.eveningOpeningHour|date('H:i:s') : '' }}</td>
                <td>{{ opening_hour.eveningClosingHour ? opening_hour.eveningClosingHour|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_opening_hours_show', {'id': opening_hour.id}) }}">show</a>
                    <a href="{{ path('app_opening_hours_edit', {'id': opening_hour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_opening_hours_new') }}">Create new</a>
{% endblock %}
