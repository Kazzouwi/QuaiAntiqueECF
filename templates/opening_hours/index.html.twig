{% extends 'base.html.twig' %}

{% block main %}
    <h1>Horaires d'ouverture</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jour</th>
                <th>Heure d'ouverture du midi</th>
                <th>Heure de fermeture du midi</th>
                <th>Heure d'ouverture du soir</th>
                <th>Heure de fermeture du soir</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for opening_hour in opening_hours %}
            <tr>
                <td>{{ opening_hour.id }}</td>
                <td>{{ opening_hour.day }}</td>
                <td>{{ opening_hour.morningOpeningHour ? opening_hour.morningOpeningHour|date('H:i:s') : '' }}</td>
                <td>{{ opening_hour.morningClosingHour ? opening_hour.morningClosingHour|date('H:i:s') : '' }}</td>
                <td>{{ opening_hour.eveningOpeningHour ? opening_hour.eveningOpeningHour|date('H:i:s') : '' }}</td>
                <td>{{ opening_hour.eveningClosingHour ? opening_hour.eveningClosingHour|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_opening_hours_show', {'id': opening_hour.id}) }}">Afficher</a>
                    <a href="{{ path('app_opening_hours_edit', {'id': opening_hour.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_opening_hours_new') }}">Cr√©er</a>
{% endblock %}
