{% extends 'base.html.twig' %}

{% block title %}Table{% endblock %}

{% block main %}
    <h1>Table</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ table.id }}</td>
            </tr>
            <tr>
                <th>Places</th>
                <td>{{ table.places }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ table.number }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_table_index') }}">Retour à la liste</a>

    <a href="{{ path('app_table_edit', {'id': table.id}) }}">Modifier</a>

    {{ include('table/_delete_form.html.twig') }}
{% endblock %}
