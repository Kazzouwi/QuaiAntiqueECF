{% extends 'base.html.twig' %}

{% block title %}Table index{% endblock %}

{% block main %}
    <h1>Table index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Places</th>
                <th>Numéro</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for table in tables %}
            <tr>
                <td>{{ table.id }}</td>
                <td>{{ table.places }}</td>
                <td>{{ table.number }}</td>
                <td>
                    <a href="{{ path('app_table_show', {'id': table.id}) }}">Afficher</a>
                    <a href="{{ path('app_table_edit', {'id': table.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_table_new') }}">Créer une table</a>
{% endblock main %}
