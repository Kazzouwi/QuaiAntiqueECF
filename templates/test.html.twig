{% extends "base.html.twig" %}

{% block main %}

<form action="{{ path('reservation_search') }}">
    <label for="places">Rechercher tables</label>
    <input type="number" name="places" min="1" max="10" required>
    <label for="date">Date de la reservation</label>
    <input type="date" name="date" required>
    <input type="submit">
</form>

<h1>Liste des tables : </h1>
{% for table in tables %}
    <h1>{{ table.number }}</h1>
    <p>{{ table.tableReservation.hour ? table.tableReservation.hour|date('H:i') : '' }}
{% endfor %}


{% endblock %}