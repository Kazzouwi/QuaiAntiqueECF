{% extends 'base.html.twig' %}

{% block title %}Meal{% endblock %}

{% block main %}
    <h1>Meal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ meal.name }}</td>
            </tr>
            <tr>
                <th>IsFavorite</th>
                <td>{{ meal.isFavorite ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('/uploads/meal/' ~ meal.image)}}" class="mealImage"/></td>
            </tr>
        </tbody>
    </table>

